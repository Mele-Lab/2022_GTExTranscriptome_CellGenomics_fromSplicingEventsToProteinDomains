profiles {
	conda {
		process.conda = ""
	}
	
	local {
		process.executor = 'local'
		executor {
		    name = 'local'
		    cpus = 8 
		    memory = 50.GB
		}

		process {
			 cpus   =  1
			 memory =  8.GB
			 queue = 'normal'
			 errorStrategy = 'ignore'
			 maxRetries = 4
			 maxErrors = -1
			
			 withLabel: long_running {queue = 'long'}
			}
  		}
	}

params{
	outdir = "${baseDir}/results"	
	transcript_list= "${baseDir}/transcriptID_list.txt"// Path to the trancript list 
}
