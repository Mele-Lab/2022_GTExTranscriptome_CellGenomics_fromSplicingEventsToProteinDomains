profiles {
      local {
        executor {
                        name = 'local'
                        cpus = 8 // This param is only used by the local executor
                        memory = '56.GB' // This param is only used by the local executor
                        queueSize = 16 // Defines how many processes are queued at a given time
                        submitRateLimit = '10 sec' // Determines the max rate of job submission per time unit
                        pollInterval = '10 sec' // Determines how often a poll occurs to check for a process termination
        }
}

        slurm {
                executor{
                        name = 'slurm'
                        queueSize = 100 //Default value = 100
                        submitRateLimit = '10 sec'
                        pollInterval = '10 sec'

                }
        }
}

// Nextflow runtime runs on top of the Java virtual machine which, by design, tries to allocate as much memory as is available.
// To avoid this, specify the maximum amount of memory that can be used by the Java VM using the -Xms and -Xmx Java flags (https://www.nextflow.io/blog/2021/5_tips_for_hpc_users.html)

env {
        NXF_OPTS="-Xms500M -Xmx2G"

}

params {
	outdir = "${baseDir}/results"
	// Path to the trancript list
	transcript_list = "${baseDir}/Transcript_query_lists/Prot-Coding-Transcript-List-2-Events.txt" 
	
	// Run tag for results dir	
	run_tag ="12.Aggregation-Visualization" // Specify tag to make unique results directory 
	
	input_files{
		annot_gtf = "${baseDir}/Data/gencode.v26.annotation.gtf"	
		genome = "${baseDir}/Data/Genome_fasta/GRCh38.p13.genome.fasta"
	}
	
	query_PFAM{
		evalue_thres = 10
		local_PFAM_DB = "${baseDir}/local-install-PFAM/Pfam-A.hmm"
	}
	
	visualization{
		cytoBand_table = "${baseDir}/Required_fiUCSC_cytoBand_hg38.txt"
	}
	}
