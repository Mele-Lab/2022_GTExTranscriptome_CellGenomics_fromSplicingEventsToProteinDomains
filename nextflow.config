params {
	r_module_load = "module load R/3.6.1"
	outdir = "${baseDir}/results"
	// Path to the trancript list
	transcript_list = "${baseDir}/test_data/transcript_list_mouse.txt"

	// Input files
	gtf = "${baseDir}/Data/GTF-Files/gencode.vM28.annotation.gtf"
	genome = "${baseDir}/Data/Genome-fasta/GRCm39.genome.fa"

	// Run Tag
	tag = "27.Test-Diff-Species"
	
	get_cds_translate {
		gffread = "/home/bsc83/bsc83930/miniconda3/bin/gffread"
	}
	
	pfam {
		hmmscan = "${baseDir}/local-install-HMMER/hmmer-3.3.2/bin/hmmscan"	
		pfam_db = "${baseDir}/local-install-PFAM/Pfam-A.hmm"
		seq_e_val_thres = 1
		dom_e_val_thres = 10
			
	}

	// Visualization params
	vis = true
	vis_transcript = true // Visualisation of Transcript with its PFAM Alignment
	vis_event = true // Visualisation of AS Event

	visualisation {
		genome_id = "mm39"
		aggregation_csv = "${baseDir}/test_data/aggr_mouse.csv"
		cyto_band = "${baseDir}/Data/UCSC_cytoBand_mm10.txt"
	}
}
